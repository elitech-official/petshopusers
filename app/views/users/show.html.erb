<div>

	<div class="col-xs-6"><span> Name: <%= @user.name %> </span> </div> <br/>
	<div class="col-xs-6"><span> Email: <%= @user.email %> </span> </div> <br/>
	<div class="col-xs-6"><span> Age: <%= @user.age %> </span> </div> <br/>
	<div class="col-xs-6"><span> Sex: <%= @user.sex %> </span> </div> <br/>

</div>
<div class="actions">
 <%= link_to "Edit user", edit_user_path(@user), class: "btn btn-warning" %> 
 <%= link_to "Delete", user_path(@user), :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-danger" %>
 <%= link_to "Back", users_path(:page => params[:page]), class: "btn btn-primary" %>
 </div>
